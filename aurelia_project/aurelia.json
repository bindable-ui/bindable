{
  "name": "bindable",
  "type": "project:plugin",
  "paths": {
    "root": "dev-app",
    "resources": "../src",
    "bindable": "../src",
    "@bindable-ui/bindable": "../src",
    "elements": "../src/elements",
    "components": "../src/components",
    "helpers": "../src/helpers",
    "interfaces": "../src/interfaces",
    "decorators": "../src/decorators",
    "value-converters": "../src/value-converters",
    "custom-attributes": "../src/custom-attributes"
  },
  "transpiler": {
    "id": "typescript",
    "fileExtension": ".ts",
    "dtsSource": [
      "./types/**/*.d.ts"
    ],
    "source": [
      "dev-app/**/*.ts",
      "src/**/*.ts"
    ]
  },
  "plugin": {
    "source": {
      "js": "src/**/*.ts",
      "css": "src/**/*.css",
      "html": "src/**/*.html",
      "json": "src/**/*.json"
    }
  },
  "markupProcessor": {
    "source": [
      "dev-app/**/*.html",
      "src/**/*.html"
    ]
  },
  "cssProcessor": {
    "source": [
      "dev-app/**/*.css",
      "src/**/*.css"
    ]
  },
  "jsonProcessor": {
    "source": [
      "dev-app/**/*.json",
      "src/**/*.json"
    ]
  },
  "platform": {
    "port": 9000,
    "index": "index.html",
    "baseDir": ".",
    "output": "scripts"
  },
  "build": {
    "targets": [
      {
        "port": 9000,
        "index": "index.html",
        "baseDir": ".",
        "output": "scripts"
      }
    ],
    "options": {
      "minify": "stage & prod",
      "sourcemaps": "dev & stage",
      "rev": false,
      "cache": false
    },
    "bundles": [
      {
        "name": "app-bundle.js",
        "source": [
          "**/*.{js,json,css,html}"
        ]
      },
      {
        "name": "vendor-bundle.js",
        "prepend": [
          "node_modules/promise-polyfill/dist/polyfill.min.js",
          "node_modules/requirejs/require.js"
        ],
        "dependencies": [
          "aurelia-bootstrapper",
          "aurelia-loader-default",
          "aurelia-pal-browser",
          "aurelia-ui-virtualization",
          {
            "name": "aurelia-testing",
            "env": "dev"
          },
          "text"
        ]
      }
    ],
    "loader": {
      "type": "require",
      "configTarget": "vendor-bundle.js",
      "includeBundleMetadataInConfig": "auto",
      "plugins": [
        {
          "name": "text",
          "extensions": [
            ".html",
            ".css"
          ],
          "stub": false
        }
      ]
    }
  },
  "packageManager": "yarn"
}
